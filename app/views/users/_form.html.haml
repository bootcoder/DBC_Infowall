.container
  - if flash[:new_user_error]
    .well.error
      - flash[:new_user_error].each do |error|
        = "Error: #{error}. Please try again"

  = form_for @user do |f|
    = f.label :username
    = f.text_field :username

    =f.label :password
    =f.password_field :password

    =f.label :password_confirmation
    =f.password_field :password_confirmation

    = f.submit
