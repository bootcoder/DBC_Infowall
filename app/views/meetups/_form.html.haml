= form_for(@meetup) do |f|
  - if @meetup.errors.any?
    .panel.callout
      %h2
        = pluralize(@meetup.errors.count, "error")
        prohibited this meetup from being saved:
      %ul
        - @meetup.errors.full_messages.each do |message|
          %li= message
  .row
    .large-12.columns.large-centered
      .large-6.columns
        = f.label :title
        = f.text_field :title
      .large-3.columns
        = f.label :organizer
        = f.text_field :organizer, value: "Andrew Fitch"
      .large-3.columns
        = f.label 'Date'
        = f.text_field :schedule, class: 'date-picker'
  .row
    .large-12.columns.large-centered
      .large-6.columns
        = f.label :event_type
        = f.select :event_type, [['Meetup (teal)', 'meetup'],['Internal (yellow)', 'internal'],['Student (gray)', 'student']]
      .large-6.columns
        = f.label 'Staff Picture'
        = f.select :img_url, [['Andrew', 'andrew.jpg'], ['Anne', 'anne.jpg'], ['Julian', 'julian.jpg'], ['K T', 'kt.jpg'],["Hunter", 'hunter.JPG'], ['Jenny', 'jenny.jpg']]
  .row
    .large-12.columns.large-centered
      .large-4.columns
        = f.label "Location: MAX 18 characters"
        = f.text_field :location, placeholder: "The Lodge"
      .large-5.columns
        = f.label "Event URL:"
        = f.text_field :meetup_url, placeholder: " (enter random numbers if none)"
      .large-3.columns
        = f.label "Number attending:"
        = f.text_field :attending, placeholder: "Most likely 0"
  .row
    .large-12.columns.large-centered
      .large-12.columns
        %label
          = f.label :description
        = f.text_field :description
  .actions.large-centered.center
    = f.submit class: "button radius"
