= form_for(@meetup) do |f|
  - if @meetup.errors.any?
    .panel.callout
      %h2
        = pluralize(@meetup.errors.count, "error")
        prohibited this meetup from being saved:
      %ul
        - @meetup.errors.full_messages.each do |message|
          %li= message
  .row
    .large-12.columns.large-centered
      .large-6.columns
        = f.label :title
        = f.text_field :title
      .large-6.columns
        = f.label :organizer
        = f.text_field :organizer
  .row
    .large-12.columns.large-centered
      .large-6.columns
        = f.label :event_type
        = f.select :event_type, [['Internal (yellow)', 'internal'],['Student (gray)', 'student'], ['Meetup (teal)', 'meetup']]
      .large-6.columns
        = f.label 'Staff Picture'
        = f.select :img_url, [['Andrew', 'andrew.jpg'], ['Anne', 'anne.jpg'], ['Julian', 'julian.jpg'], ['K T', 'kt.jpg'],["Hunter", 'hunter.JPG'], ['Jenny', 'jenny.jpg']]
  .row
    .large-12.columns.large-centered
      .large-4.columns
        = f.label "Location: MAX 18 characters"
        = f.text_field :location
      .large-4.columns
        = f.label "Meetup URL:"
        = f.text_field :meetup_url, placeholder: " (enter random numbers if none)"
      .large-4.columns
        = f.label "Number attending (if any)"
        = f.text_field :attending
  .row
    .large-12.columns.large-centered
      %label
        = f.label :description
      = f.text_field :description
  .row
    .large-6.columns.large-centered.date-select
      = f.label :schedule
      = f.text_field :schedule, class: 'date-picker'
  .actions.large-centered.center
    = f.submit class: "button radius"
