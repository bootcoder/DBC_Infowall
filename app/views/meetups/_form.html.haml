= form_for(@meetup) do |f|
  - if @meetup.errors.any?
    #error_explanation
      %h2
        = pluralize(@meetup.errors.count, "error")
        prohibited this meetup from being saved:
      %ul
        - @meetup.errors.full_messages.each do |message|
          .panel= message
  .row
    .large-6.columns
      = f.label :title
      = f.text_field :title
  .row
    .large-6.columns
      = f.label :organizer
      = f.text_field :organizer
  .row
    .large-6.columns
      = f.label "Location: MAX 18 characters"
      = f.text_field :location
  .row
    .large-6.columns
      = f.label 'Staff Picture'
      = f.select :img_url, [["current: #{@meetup.img_url}", "#{@meetup.img_url}"], ["Hunter", 'hunter.JPG'], ['Jenny', 'jenny.jpg'], ['Andrew', 'andrew.jpg'], ['Anne', 'anne.jpg'], ['Julian', 'julian.jpg'], ['K T', 'kt.jpg']]
  .row
    .large-6.columns
      = f.label :meetup_url
      = f.text_field :meetup_url
  .row
    .large-6.columns
      = f.label :attending
      = f.text_field :attending
  .row
    .large-6.columns
      = f.label :event_type
      = f.select :event_type, [['Student', 'student'], ['Meetup', 'meetup']]
  .row
    .large-12.columns
      %label
        = f.label :description

        = f.text_field :description
  .row
    .large-6.columns
      = f.label :schedule
      = f.datetime_select :schedule
  .actions
    = f.submit
